{% extends 'OroSearchBundle:Search:searchResultItem.html.twig' %}

{% set showImage = false %}

{% if entity %}
    {% set recordUrl = indexer_item.recordUrl %}
{% endif %}

{% set title = (entity.summary ~ ' - ' ~ entity.code)|default('N/A') %}
{% set entityType = oro_entity_config_value(indexer_item.entityName, 'label')|trans %}


{% set entityInfo = [
    {'title': 'oro.issues.issue.created_at'|trans, 'value': entity.createdAt ? entity.createdAt|oro_format_datetime : 'N/A'},
    {'title': 'oro.issues.issue.updated_at'|trans, 'value': entity.updatedAt ? entity.updatedAt|oro_format_datetime : 'N/A'},
] %}
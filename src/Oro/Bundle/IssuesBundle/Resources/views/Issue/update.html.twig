{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% if form.vars.value and form.vars.value.id %}
    {% set formAction = path('oro_issue_update', { 'id': form.vars.value.id }) %}
{% else %}
    {% set formAction = path('oro_issue_create') %}
{% endif %}

{% block navButtons %}
    {% if form.vars.value and form.vars.value.id and resource_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
            'dataUrl': path('oro_issues_api_delete_issue', {'id': form.vars.value.id}),
            'dataRedirect': path('oro_issue_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-tag',
            'dataId': form.vars.value.id,
            'entity_label': 'oro.issues.issue.entity_label'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('oro_issue_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if resource_granted('oro_issue_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({ 'html': html }) }}
{% endblock navButtons %}

{% block breadcrumb %}
    {% if breadcrumbs is not defined %}
        {% set breadcrumbs = [{'label': 'oro.issues.issue.entity_label'|trans }] %}
        {% if entity.summary is not empty %}
            {% set breadcrumbs = breadcrumbs|merge([{'label': entity.summary}]) %}
        {% endif %}
    {% endif %}
    {% include 'OroNavigationBundle:Menu:breadcrumbs.html.twig' %}
{% endblock breadcrumb %}

{% block pageHeader %}
    {% if form.vars.value and form.vars.value.id %}
        {% set breadcrumbs = {
        'entity':      form.vars.value,
        'indexPath':   path('oro_issue_index'),
        'indexLabel': 'oro.issues.issue.entity_label'|trans,
        'entityTitle': form.vars.value.summary
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'oro.issues.issue.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set formData = [form_row(form)] %}

    {% set id = 'issue-edit' %}
    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{'title': '','data': formData}]
    }] %}
    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
    
{% endblock content_data %}

{% block content %}
    {% if isWidgetContext %}
        <script type="text/javascript">
            require(['oroui/js/widget-manager', 'oroui/js/messenger'],
                    function(widgetManager, messenger) {
                        widgetManager.getWidgetInstance(
                                {{ app.request.get('_wid')|json_encode|raw }},
                                function(widget) {
                                    widget.on('formSave', function() {
                                        if (widget.disposing) {
                                            return false;
                                        }
                                        var message = '{{ 'oro.issues.controller.issues.created_success'|trans }}';
                                        messenger.notificationFlashMessage('success', message);
                                        widget.remove();
                                    });
                                }
                        );
                    });
        </script>
    {% endif %}
    {{ parent() }}
{% endblock content %}
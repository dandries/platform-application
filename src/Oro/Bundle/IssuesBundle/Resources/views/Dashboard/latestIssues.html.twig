        require(['orocrm/call/info-opener']);
    </script>
{% endblock %}

{% block actions %}
    {% set actions = [{
        'url': path('oro_issue_index'),
        'type': 'link',
        'label': 'oro.issues.latest_issues.view_all'|trans
    }] %}

    {{ parent() }}
{% endblock %}